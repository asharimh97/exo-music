<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_daerah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context="id.asharimh.exomusicplayer.ListDaerahActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ini Daerah" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textViewTitle"
        android:src="@drawable/cover"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewAlbum"
        android:scaleType="center"
        />
    <ListView
        android:id="@+id/listViewDaerah"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewAlbum"
        android:divider="#fff"
        android:dividerHeight="0.5dp"></ListView>
</RelativeLayout>
